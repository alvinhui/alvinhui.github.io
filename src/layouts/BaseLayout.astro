---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = '摄影爱好者，前端工程师。' } = Astro.props;
const fullTitle = title === '许文涛' ? title : `${title} - 许文涛`;
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="author" content="Alvin Hui" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" title={fullTitle} href="/rss.xml" />
    <title>{fullTitle}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1 max-w-4xl mx-auto w-full px-4 sm:px-6 py-8">
      <slot />
    </main>
    <Footer />
  </body>
</html>
