---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import { getCollection } from 'astro:content';
import { parseDateFromId, getSlugFromId } from '../../lib/utils';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  const tagSet = new Set<string>();
  for (const post of posts) {
    for (const tag of post.data.tags || []) {
      tagSet.add(tag);
    }
  }
  return Array.from(tagSet).map((tag) => ({
    params: { tag },
    props: {
      tag,
      posts: posts
        .filter((p) => p.data.tags?.includes(tag))
        .sort((a, b) => parseDateFromId(b.id).getTime() - parseDateFromId(a.id).getTime()),
    },
  }));
}

const { tag, posts } = Astro.props;
---

<BaseLayout title={`#${tag}`}>
  <div class="mb-8">
    <a href="/tags/" class="text-sm text-muted dark:text-muted-dark hover:text-primary transition-colors">&larr; 所有标签</a>
    <h1 class="text-3xl font-bold text-text dark:text-text-dark mt-2 mb-1">#{tag}</h1>
    <p class="text-muted dark:text-muted-dark">{posts.length} 篇文章</p>
  </div>

  <div class="space-y-3">
    {posts.map((post) => (
      <PostCard
        title={post.data.title}
        date={parseDateFromId(post.id)}
        category={post.data.category}
        tags={post.data.tags}
        href={`/blog/${getSlugFromId(post.id)}/`}
      />
    ))}
  </div>
</BaseLayout>
